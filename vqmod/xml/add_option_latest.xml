var lp_categorycart<?php echo $product['product_id']; ?> = {
	'add': function(product_id, quantity) { 
		$.ajax({
		url: 'index.php?route=checkout/cart/add',
		type: 'post',
		data: $('#lp_categoryproduct<?php echo $product['product_id']; ?>  input[type=\'text\'], #lp_categoryproduct<?php echo $product['product_id']; ?> input[type=\'hidden\'], #lp_categoryproduct<?php echo $product['product_id']; ?> input[type=\'radio\']:checked, #lp_categoryproduct<?php echo $product['product_id']; ?> input[type=\'checkbox\']:checked, #lp_categoryproduct<?php echo $product['product_id']; ?> select, #lp_categoryproduct<?php echo $product['product_id']; ?> textarea'),
		dataType: 'json',
		beforeSend: function() {
			$('#lp_categorycart<?php echo $product['product_id']; ?>').button('loading');
		},
		complete: function() {
			$('#lp_categorycart<?php echo $product['product_id']; ?>').button('reset');
		},
		success: function(json) {
			
			$('.alert, .text-danger').remove();
			$('.form-group').removeClass('has-error');
			if (json['error']) { 
				if (json['error']['option']) {
					for (i in json['error']['option']) {
						var element = $('#lp_categoryproduct<?php echo $product['product_id']; ?> #input-option' + i.replace('_', '-'));

						if (element.parent().hasClass('input-group')) {
							element.parent().after('<div class="text-danger">' + json['error']['option'][i] + '</div>');
						} else {
							element.after('<div class="text-danger">' + json['error']['option'][i] + '</div>');
						}
					}
				}

				if (json['error']['recurring']) {
					$('#lp_categoryproduct<?php echo $product['product_id']; ?> select[name=\'recurring_id\']').after('<div class="text-danger">' + json['error']['recurring'] + '</div>');
				}

				// Highlight any found errors
				$('.text-danger').parent().addClass('has-error');
			}
			if (json['success']) { 
				$('#content').parent().before('<div class="alert alert-success">' + json['success'] + '<button type="button" class="close" data-dismiss="alert">&times;</button></div>');

				$('#cart > button').html('<i class="fa fa-shopping-cart"></i> ' + json['total']);

				$('html, body').animate({ scrollTop: 0 }, 'slow');

				$('#cart > ul').load('index.php?route=common/cart/info ul li');
			}
		}
	});
	}
}
//--></script>
 
